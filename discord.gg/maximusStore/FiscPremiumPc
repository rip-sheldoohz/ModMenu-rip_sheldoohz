if getgenv().ecohub then warn("Eco Hub : Already executed!") return end
getgenv().ecohub = true

if not game:IsLoaded() then
    game.Loaded:Wait()
end

local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()
local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()

local Window = Fluent:CreateWindow({
    Title = "Maximus - Premium | Fisch",
    SubTitle = "(discord.gg/maximusStore)",
    TabWidth = 160,
    Size = UDim2.fromOffset(550, 350),
    Acrylic = false,
    Theme = "Amethyst",
    MinimizeKey = Enum.KeyCode.LeftControl
})

-- ⚠️ Este script funciona apenas em PCs
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")

local player = Players.LocalPlayer

-- Função para detectar dispositivo
local function IsUsingMobile()
    -- Se o último tipo de entrada foi toque, é mobile
    if UserInputService:GetLastInputType() == Enum.UserInputType.Touch then
        return true
    end
    -- Se houver gamepad conectado, também é mobile/console
    if #UserInputService:GetConnectedGamepads() > 0 then
        return true
    end
    return false
end

-- Verificação
if IsUsingMobile() then
    -- Notificação (se estiver usando alguma biblioteca de UI)
    if Library and Library.Notification then
        Library:Notification({
            Title = "Erro",
            Content = "Script não funciona em Mobile",
            SubContent = "Use apenas em PC",
            Duration = 5
        })
    end

    -- Kicka o jogador do jogo
    player:Kick("❌ Este script só pode ser usado em PC. Acesse via computador.")
    return
end
